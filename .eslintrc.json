{
    "root": true,
  
    "env": {
      "node": true,
      "mocha": true
    },
  
    "plugins": ["mocha", "prettier"],
  
    "extends": [
        "plugin:mocha/recommended",
        "prettier"
    ],

    "rules": {
      "multiline-ternary": ["warn", "always-multiline"],
      "no-console": "off",
      "no-debugger": "off",    
      "quotes": ["warn", "backtick"],
      "semi": ["warn", "never"],
      "prettier/prettier": [
        "warn",
        {
            "singleQuote": true,
            "tabWidth": 4,
            "semi": false
        }
      ]
    },
    
    "parser": "babel-eslint"
  }
